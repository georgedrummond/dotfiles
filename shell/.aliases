#!/bin/sh

#
# Workflow
#
alias cdc='cd ~/code'
alias cdd='cd ~/dotfiles'
alias cdh='cd ~'
alias lock='/System/Library/CoreServices/"Menu Extras"/User.menu/Contents/Resources/CGSession -suspend'
alias rmvim='find ./ -type f -name "\.*sw[klmnop]" -delete'

#
# Spotlight shortcuts
#
alias spotlight_index='sudo mdutil -E /'

#
# Tmux
#
alias tmux='TERM=xterm-256color tmux'

#
# Ruby
#
alias bb='bundle install'
alias bc='bundle exec rails console'
alias be='bundle exec'
alias bq='bundle exec sidekiq'
alias br='bundle exec rspec'
alias bs='bundle exec rails server'

#
# Phoenix/Elixir
#
alias eps='mix phoenix.server'

#
# Git
#
alias gap='git add -p'
alias gcm='git commit -m'
alias gdm='git branch --merged | egrep -v "(^\*|master|dev)" | xargs git branch -d'
alias gx='gitx .'
alias gho='hub browse'
alias gnb='git checkout -b'
alias guc='git reset --soft HEAD~1'

gsq() { git rebase -i HEAD~"$@" }

#
# React Native
#
alias rn='react-native'
alias rios='react-native run-ios'
alias rdroid='react-native run-android'

#
# Yarn
#
alias ys='yarn run start'

#
# Work
#
alias tt='cd ~/code/ios/timesheets'
